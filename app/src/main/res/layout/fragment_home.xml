<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment" android:background="@color/mainScreenColor">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/homeInfoLayout"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:visibility="visible"
            android:background="@color/mainScreenSecondColor">

        <View
                android:id="@+id/view8"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintBottom_toBottomOf="@+id/textView7" android:layout_marginStart="5dp"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout7" app:flow_verticalGap="5dp"
                app:layout_constraintStart_toStartOf="@+id/linearLayout"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="5dp"
                app:layout_constraintTop_toBottomOf="@+id/textView7">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tweetCountETH" android:layout_weight="1"
                    android:textColor="@color/white" android:paddingEnd="5dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tweetCountBTC"
                    android:layout_weight="1" android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout" app:flow_verticalGap="5dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
                app:layout_constraintStart_toStartOf="@+id/linearLayout4" android:layout_marginTop="5dp"
        >
            <TextView
                    android:text="@string/fearIndex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView18" android:layout_weight="1"
                    android:textColor="@color/white" android:paddingEnd="5dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/fearIndex"
                    android:layout_weight="1" android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout31" app:flow_verticalGap="5dp"
                app:layout_constraintStart_toEndOf="@+id/linearLayout4"
                app:layout_constraintTop_toTopOf="@+id/linearLayout4" android:layout_marginStart="8dp">
            <TextView
                    android:text="@string/totalProfit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView15" android:layout_weight="1"
                    android:textColor="@color/white" android:paddingEnd="5dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/totalProfit"
                    android:layout_weight="1" android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:flow_verticalGap="5dp"
                android:id="@+id/linearLayout5"
                app:layout_constraintStart_toEndOf="@+id/linearLayout6"
                app:layout_constraintTop_toTopOf="@+id/linearLayout6" android:layout_marginStart="8dp">
            <TextView
                    android:text="@string/totalCurrentProfit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView16" android:layout_weight="1"
                    android:textColor="@color/white" android:paddingEnd="5dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/totalCurrentProfit" android:layout_weight="1"
                    android:textColor="@color/white" android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout4" app:flow_verticalGap="5dp"
                app:layout_constraintStart_toStartOf="@+id/linearLayout6"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout6" android:layout_marginTop="5dp"
        >
            <TextView
                    android:text="@string/closedPositions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView14" android:layout_weight="1"
                    android:textColor="@color/white" android:paddingEnd="5dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/totalClosedPosition"
                    android:layout_weight="1" android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:flow_verticalGap="5dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="5dp" android:layout_marginStart="5dp" android:id="@+id/linearLayout6">
            <TextView
                    android:text="@string/openPositions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView9" android:layout_weight="1"
                    android:textColor="@color/white" android:paddingEnd="5dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/totalOpenPosition"
                    android:textColor="@color/white"/>
        </LinearLayout>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/liveDataPB"
                app:layout_constraintStart_toEndOf="@+id/linearLayout5"
                app:layout_constraintTop_toTopOf="@+id/linearLayout5"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout5" android:layout_marginStart="10dp"/>
        <TextView
                android:text="@string/tweetCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView7"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="@+id/linearLayout"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
            android:id="@+id/signalScrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/homeInfoLayout" android:layout_marginTop="5dp"
            android:layout_marginBottom="50dp">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/signalRecylerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </ScrollView>
    <ProgressBar
        android:id="@+id/homeProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
            android:id="@+id/signalNoCoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/thereAreNoCoin"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>